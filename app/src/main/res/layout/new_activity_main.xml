<?xml version="1.0" encoding="utf-8"?>

<!--    match_parent로  길이를 모두 채움-->
<!--    vertical로 수직 배열-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:theme="@style/LightTheme"
    android:background="?attr/backgroundColor"
    android:textStyle="normal"
    android:id="@+id/fragment_container"
    >

    <!-- 툴 바 추가 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="?attr/titleColor"
        android:elevation="4dp"

        />

    <!--
        LinearLayout을 horizontal로 수평 배열
        TextView로 주 표시
    -->

    <LinearLayout
        android:theme="@style/LightTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/weekBarColor"
        >

        <TextView

            android:id="@+id/sun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/sundayCharColor"
            android:text="일"

            />

        <TextView

            android:id="@+id/mon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/dayCharColor"
            android:text="월"

            />

        <TextView

            android:id="@+id/tue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/dayCharColor"
            android:text="화"

            />

        <TextView

            android:id="@+id/wed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/dayCharColor"
            android:text="수"

            />

        <TextView

            android:id="@+id/thu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/dayCharColor"
            android:text="목"

            />

        <TextView

            android:id="@+id/fri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/dayCharColor"
            android:text="금"

            />

        <TextView

            android:id="@+id/sat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="?attr/saturdayCharColor"
            android:text="토"

            />


    </LinearLayout>


</LinearLayout>