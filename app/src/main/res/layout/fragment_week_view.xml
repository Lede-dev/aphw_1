                    android:layout_width="25dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="0"
                    android:background="?attr/backgroundColor"
                    android:textColor="?attr/calendarTimeColor"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    />

