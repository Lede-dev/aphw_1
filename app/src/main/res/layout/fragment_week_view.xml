<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WeekViewFragment"
    android:orientation="vertical"
    android:theme="@style/LightTheme">

    <LinearLayout
        android:theme="@style/LightTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView

            android:id="@+id/daybar_blank"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="-"
            android:textColor="?attr/calendarTimeColor"
            android:background="?attr/backgroundColor"

            />

        <TextView

            android:id="@+id/daybar_sun"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="?attr/calendarTimeColor"
            android:background="?attr/backgroundColor"

            />

        <TextView

            android:id="@+id/daybar_mon"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2"
            android:textColor="?attr/calendarTimeColor"
            android:background="?attr/backgroundColor"

            />

        <TextView

            android:id="@+id/daybar_tue"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3"
            android:textColor="?attr/calendarTimeColor"
            android:background="?attr/backgroundColor"

            />

        <TextView

            android:id="@+id/daybar_wed"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4"
            android:textColor="?attr/calendarTimeColor"
            android:background="?attr/backgroundColor"

            />

        <TextView

            android:id="@+id/daybar_thu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:textColor="?attr/calendarTimeColor"
            android:background="?attr/backgroundColor"

            />

        <TextView

            android:id="@+id/daybar_fri"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6"
            android:textColor="?attr/calendarTimeColor"
            android:background="?attr/backgroundColor"

            />

        <TextView

