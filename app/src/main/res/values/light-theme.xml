<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#777777</item>
        <item name="colorPrimaryDark">#333333</item>

        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>

        <!-- 타이틀 글자 색 -->
        <item name="titleColor">#000000</item>

        <!-- 배경 색 -->
        <item name="backgroundColor">#bbbbbb</item>

        <!-- 캘린더 배경 색 -->
        <item name="calendarBackgroundColor">#f0f0f0</item>

        <!-- 주 표시 바 색 -->
        <item name="weekBarColor">#adff2f</item>

        <!-- 달력의 일반적인 날짜 표시 색 -->
        <item name="dayCharColor">#000000</item>

        <!-- 달력의 일요일/공휴일 표시 색 -->
        <item name="sundayCharColor">#ff0000</item>

        <!-- 달력의 토요일 표시 색 -->
        <item name="saturdayCharColor">#0000ff</item>

        <!-- 달력의 그리드 내부 색 -->
        <item name="calendarViewColor">#fefefe</item>

        <!-- 달력의 그리드 격자 테두리 색 -->
        <item name="calendarGridColor">#bbbbbb</item>

    </style>

</resources>